<div class="bothside">
  <!-- left side css -->
  <div class="leftside">
    <div class="overview">
      <!-- THIS IS FOR TITLE, TIME, AND CURRENT FORECAST -->

      <div class="title">
        <!-- THIS IS FOR TITLE, TIME -->

        <h2><%= city %>, <%= province %></h2>

        <hr />

        <p><%= dateTime %></p>

        <!-- add line -->

        <!-- add time -->
      </div>

      <div class="forecast">
        <!-- THIS IS FOR CURRENT FORECAST -->

        <!-- THROW IN PIC OF FORECAST -->
        <img src="<%= iconCondition %>" />
        <p id="temperature"><%= temperature %></p>
      </div>
    </div>

    <div id="tonight-conditions">
      <!-- THIS IS FOR TONIGHT CONDITIONS -->
      <img class="small-icon" src="<%= tonightIcon %>" />
      <p class="future">Tonight: <%= tonightConditions %></p>
    </div>
    <!-- accordion carousel -->
    <div class="accordion" id="accordionExample">
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button
            class="accordion-button"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#collapseOne"
            aria-expanded="true"
            aria-controls="collapseOne"
          >
            Hourly Temperature
          </button>
        </h2>
        <div
          id="collapseOne"
          class="accordion-collapse collapse show"
          data-bs-parent="#accordionExample"
        >
          <div class="accordion-body">
            <!-- carousel -->
            <div id="carouselExample" class="carousel slide">
              <div class="carousel-inner fs-6">
                <!-- table1 -->
                <div class="carousel-item active">
                  <table class="table">
                    <thead>
                      <tr>
                        <td><%= hourlyForecast[0].time %></td>
                        <td><%= hourlyForecast[1].time %></td>
                        <td><%= hourlyForecast[2].time %></td>
                        <td><%= hourlyForecast[3].time %></td>
                        <td><%= hourlyForecast[4].time %></td>
                        <td><%= hourlyForecast[5].time %></td>
                      </tr>
                    </thead>
                    <tbody>
                      <td><%= hourlyForecast[0].temp %></td>
                      <td><%= hourlyForecast[1].temp %></td>
                      <td><%= hourlyForecast[2].temp %></td>
                      <td><%= hourlyForecast[3].temp %></td>
                      <td><%= hourlyForecast[4].temp %></td>
                      <td><%= hourlyForecast[5].temp %></td>
                    </tbody>
                  </table>
                </div>
                <!-- table2 -->
                <div class="carousel-item">
                  <table class="table">
                    <thead>
                      <tr>
                        <td><%= hourlyForecast[6].time %></td>
                        <td><%= hourlyForecast[7].time %></td>
                        <td><%= hourlyForecast[8].time %></td>
                        <td><%= hourlyForecast[9].time %></td>
                        <td><%= hourlyForecast[10].time %></td>
                        <td><%= hourlyForecast[11].time %></td>
                      </tr>
                    </thead>
                    <tbody>
                      <td><%= hourlyForecast[6].temp %></td>
                      <td><%= hourlyForecast[7].temp %></td>
                      <td><%= hourlyForecast[8].temp %></td>
                      <td><%= hourlyForecast[9].temp %></td>
                      <td><%= hourlyForecast[10].temp %></td>
                      <td><%= hourlyForecast[11].temp %></td>
                    </tbody>
                  </table>
                </div>
                <!-- table3 -->
                <div class="carousel-item">
                  <table class="table">
                    <thead>
                      <tr>
                        <td><%= hourlyForecast[12].time %></td>
                        <td><%= hourlyForecast[13].time %></td>
                        <td><%= hourlyForecast[14].time %></td>
                        <td><%= hourlyForecast[15].time %></td>
                        <td><%= hourlyForecast[16].time %></td>
                        <td><%= hourlyForecast[17].time %></td>
                      </tr>
                    </thead>
                    <tbody>
                      <td><%= hourlyForecast[12].temp %></td>
                      <td><%= hourlyForecast[13].temp %></td>
                      <td><%= hourlyForecast[14].temp %></td>
                      <td><%= hourlyForecast[15].temp %></td>
                      <td><%= hourlyForecast[16].temp %></td>
                      <td><%= hourlyForecast[17].temp %></td>
                    </tbody>
                  </table>
                </div>
                <!-- table4 -->
                <div class="carousel-item">
                  <table class="table">
                    <thead>
                      <tr>
                        <td><%= hourlyForecast[18].time %></td>
                        <td><%= hourlyForecast[19].time %></td>
                        <td><%= hourlyForecast[20].time %></td>
                        <td><%= hourlyForecast[21].time %></td>
                        <td><%= hourlyForecast[22].time %></td>
                        <td><%= hourlyForecast[23].time %></td>
                      </tr>
                    </thead>
                    <tbody>
                      <td><%= hourlyForecast[18].temp %></td>
                      <td><%= hourlyForecast[19].temp %></td>
                      <td><%= hourlyForecast[20].temp %></td>
                      <td><%= hourlyForecast[21].temp %></td>
                      <td><%= hourlyForecast[22].temp %></td>
                      <td><%= hourlyForecast[23].temp %></td>
                    </tbody>
                  </table>
                </div>
              </div>
              <button
                class="carousel-control-prev"
                type="button"
                data-bs-target="#carouselExample"
                data-bs-slide="prev"
              >
                <span
                  class="carousel-control-prev-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button
                class="carousel-control-next"
                type="button"
                data-bs-target="#carouselExample"
                data-bs-slide="next"
              >
                <span
                  class="carousel-control-next-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- tomorrow, overmorrow, fourthmorrow -->
    <div class="future">
      <div class="container text-center">
        <div class="row my-5 align-items-center justify-content-center">
          <div class="col">
            <div class="card" style="width: 18rem; height: 210px">
              <div class="card-body">
                <h5 class="card-title"><%= tomorrowDay %></h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">
                  <img class="small-icon" src="<%= tomorrowIcon %>" />
                </h6>
                <p class="card-text fs-6"><%= tomorrowConditions %></p>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="card" style="width: 18rem; height: 210px">
              <div class="card-body">
                <h5 class="card-title"><%= overmorrowDay %></h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">
                  <img class="small-icon" src="<%= overmorrowIcon %>" />
                </h6>
                <p class="card-text fs-6"><%= overmorrowConditions %></p>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="card" style="width: 18rem; height: 210px">
              <div class="card-body">
                <h5 class="card-title"><%= fourthmorrowDay %></h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">
                  <img class="small-icon" src="<%= fourthmorrowIcon %>" />
                </h6>
                <p class="card-text fs-6"><%= fourthmorrowConditions %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- yeah throw it in here -->
    </div>
    <p hidden><%= hourlyForecast.hour1 %></p>
    <!-- right side css -->
    <!-- this side will only occasionally be up -->
  </div>
</div>
